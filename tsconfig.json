{
    "compilerOptions": {
        "module": "amd",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outFile": "./dist/TSEngine.js",
        "outDir": "./dist",
        "declaration": true,
        "target": "es5",
        "composite": true,
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "es5",
            "dom"
        ],
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.d.ts"
    ]
}